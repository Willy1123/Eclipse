
public class Cruz extends KarelMejorada{
	
	public void run() {
		
		encuentraBeeper();
	}
	
	private void encuentraBeeper() {
		
		while(frontIsClear() && facingEast()) {
			move();
			
			if(frontIsBlocked() && facingEast()) {
			turnLeft();
			}
			
			if(frontIsClear() && facingNorth()) {
				move();
				turnLeft();
			}
		}
		
		
	}
}
