/*
 * ArreglaCarretera debe colocar un beeper en un agujero
 */

import stanford.karel.Karel;
public class ArreglaCarretera extends Karel{
	public void run() {
		move();
		giraDerecha();
		move();
		putBeeper();
		daVuelta();
		move();
		giraDerecha();
		move();
	}
	
	private void giraDerecha(){
		turnLeft();
		turnLeft();
		turnLeft();
	}
	
	private void daVuelta() {
		turnLeft();
		turnLeft();
	}
}
