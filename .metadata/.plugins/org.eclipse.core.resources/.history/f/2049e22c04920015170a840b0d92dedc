
public class Fibonacci extends KarelMejorada{

	public void run() {
		while(frontIsClear()) {
			putBeeper();
			
			
		}
	}

	private void halfTurn() {
	    turnLeft();
	    turnLeft();
	}

	private void turnright() {
	    iterate(3) {
	        turnleft();
	    }
	}

	private void go-back() {
	    half-turn();
	    move();
	}

	public void gotoCorner() {
	    while (notFacingSouth) {
	        turnleft();
	    }
	    while (frontIsClear) {
	        move();
	    }
	    turnright();
	    while (frontIsClear) {
	        move();
	    }
	}

	private void goto-start() {
	    gotoCorner();
	    turnright();
	    move();
	    turnright();
	    move();
	}

	private void copyPile(dist) {
	    if (nextToABeeper) {
	        pickbeeper();
	        copyPile(dist);
	        putbeeper();
	        goBack();
	        iterate (pred(dist)) {
	            move();
	        }
	        putbeeper();
	        goBack();
	        iterate (pred(dist)) {
	            move();
	        }
	    } else {
	        move();
	        iterate (pred(dist)) {
	            move();
	        }
	    }
	}

	private void fibonacci() {
	    while (frontIsClear()) {
	        copyPile(1);
	        goBack();
	        move();
	        halfTurn();
	        copyPile(2);
	    }
	}
}
