import javax.swing.*;
import java.awt.*;

public class Game extends JPanel{
	//Defino el tamaño de la ventana donde va a estar el juego
	private Dimension gameField = new Dimension(600, 500); 

	public Game() {
		
	}
	
	public void setSize(Dimension size) {
		super.setSize(size);
		gameField = new Dimension(size.width-200, size.height-100);
	}
	
	public void paint(Graphics g) {
		super.paint(g);
		//Te centra siempre el juego, independientemente del tamaño de la pantalla
		g.translate((getWidth() - gameField.width)/2, (getHeight() - gameField.height)/2);
		
		g.setColor(Color.WHITE);
		g.fillRect(0, 0, gameField.width, gameField.height);
		g.setColor(Color.BLACK);
		g.drawRect(0, 0, gameField.width, gameField.height);
	}
	
}
